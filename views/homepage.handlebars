<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{email}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-name">Reminder Title:</label>
        <input class="form-input" type="text" id="post-name" name="post-name" />
      </div>
      <div class="form-group">
        <label for="post-desc">Memo:</label>
        <textarea class="form-input" id="post-desc" name="post-desc"></textarea>
      </div>

      {{!-- Recurrance selection --}}
      <div class="months" id="months">
<input type="checkbox" id="jan" name="jan" value="0">
<label for="jan">January</label><br>
<input type="checkbox" id="feb" name="feb" value="1">
<label for="feb">February</label><br>
<input type="checkbox" id="mar" name="mar" value="2">
<label for="mar">March</label><br>
<input type="checkbox" id="apr" name="apr" value="3">
<label for="apr">April</label><br>
<input type="checkbox" id="may" name="may" value="4">
<label for="may">May</label><br>
<input type="checkbox" id="jun" name="jun" value="5">
<label for="jun">June</label><br>
<input type="checkbox" id="jul" name="jul" value="6">
<label for="jul">July</label><br>
<input type="checkbox" id="aug" name="aug" value="7">
<label for="aug">August</label><br>
<input type="checkbox" id="sep" name="sep" value="8">
<label for="sep">September</label><br>
<input type="checkbox" id="oct" name="oct" value="9">
<label for="oct">October</label><br>
<input type="checkbox" id="nov" name="nov" value="10">
<label for="nov">November</label><br>
<input type="checkbox" id="dec" name="dec" value="11">
<label for="dec">December</label><br>
      <div class="form-group">
        <button type="submit" id="create-reminder" class="btn btn-primary">Create Reminder</button>
      </div>
      </div>


    </form>
  </div>

  {{#if reminders.length}}
  <div class="col-md-6 post-list">
    <h4 class="text-center">Your Reminders:</h4>

    {{#each reminder as |reminder|}}
    <div class="row mb-2">
      <div class="col-md-10">
        <h5><a href="/post/{{post.id}}">{{post.title}}</a></h5>
      </div>
      <div class="col-md-2">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>


<script src="/js/profile.js"></script>